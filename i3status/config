# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = false
}

order += "cpu_usage"
order += "memory"
order += "volume master" 
order += "tztime local"

cpu_usage {
	format= "CPU:%usage"
	min_width = "CPU:100%"
	align = "center"
}

memory {
        format = "RAM:%percentage_used"
	min_width = "RAM:100.0%"
	align = "center" 
}

volume master {
        format = "VOL:%volume"
        format_muted = "MUTED"
        device = "default"
	min_width = "VOL:100%"
	align = "center"
}

tztime local {
        format = "%A %d-%m-%Y %H:%M:%S"
}
